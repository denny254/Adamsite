{
    "builds": [
      {
        "src": "drf/wsgi.py",
        "use": "@vercel/python",
        "config": { "maxLambdaSize": "15mb", "runtime": "python" }
      },
      {
        "src": "build_files.sh",
        "use": "@vercel/static"
      }
    ],
    "routes": [
      {
        "src": "/staticfiles/(.*)",
        "dest": "/staticfiles/$1"
      },
      {
        "src": "/(.*)",
        "dest": "drf/wsgi.py"
      }
    ],
    "build": {
    "env": {
      "APT_DEPS": "libpq-dev" 
    }
  }
  }